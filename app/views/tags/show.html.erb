<h1 id="tagname"><%= @tag.name %></h1>




<% @tag.answers.each do |answer| %>
  <ul>

    <li id="traveler_question">Q: <%=link_to "#{Question.find_by_id(answer.question_id).question_text}", question_path(Question.find_by_id(answer.question_id))%></li>
    <li id="traveler_post">A: <%= answer.answer_text %></li>
    <li id="tag_poster"> <%= link_to image_tag(User.find_by_id(answer.user_id).gravatar_url), user_path(User.find_by_id(answer.user_id)) %> 
      <%= User.find_by_id(answer.user_id).name %> | Posted: <%= time_ago_in_words(answer.created_at) %> ago </li> 
    
  </ul> 

<% end %>
