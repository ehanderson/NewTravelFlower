<div class="question_show">
  <h2><%= @question.question_text %></h2>
    <%= image_tag @questioning_user.gravatar_url, { :class => "poster_image" }  %>
    Posted By:
    <%= @questioning_user.email %><br>



  <br><br>

  <h3>Answers:</h3>
    <% @question.answers.each do |answer| %>
      <br><%= answer.answer_text %><br>
      <div class="response"> <%= image_tag (User.find(answer.user_id).gravatar_url), { :class => "answerer_image" } %>    

      Answered by: <%= User.find(answer.user_id).email %><br> 
      Tags:<br>
    <% answer.tags.each do |tag| %>
        <%= link_to(tag.name, tag_path(tag)) %><br>
    <% end %></div><br>
    <% end %>

  <br> 

<h4 id="button_id">Post your Answer!</h4>
  <%= form_for @answer do |f|%>
    <ul class="formList">
      <li>
        <%= f.text_area :answer_text %>
      </li>
      <li>
 
        <%= text_field_tag :tag_names %>
      </li>
      <li>
        <%= hidden_field_tag :question_id, @question.id %>
      </li>
      <li>
        <%= f.submit "Answer This" %>
      </li>
    </ul>
  <% end %>
</div>
